<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TitleActivity"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/let"
        android:id="@+id/let"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/me"
        android:layout_alignLeft="@+id/me"
        android:layout_alignStart="@+id/me" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/me"
        android:id="@+id/me"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/guess"
        android:layout_alignStart="@+id/guess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/guess"
        android:id="@+id/guess"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/me"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:id="@+id/playButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/me"
            android:width="150dp"
            android:background="@android:color/black"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="24sp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:id="@+id/settingsButton"
            android:layout_alignWithParentIfMissing="false"
            android:enabled="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:width="150dp"
            android:background="@android:color/black"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </RelativeLayout>

</RelativeLayout>

